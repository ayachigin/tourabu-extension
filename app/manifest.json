{
    "name": "とうらぶえくすてんしょん",
    "version": "0.6.1",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "description": "DMMのブラウザゲーム「刀剣乱舞」をちょっと遊びやすくする拡張機能です",
    "icons": {
        "16": "images/icon_16.png",
        "128": "images/icon_128.png"
    },
    "background": {
        "persistent": true,
        "scripts": [
            "scripts/chromereload.js",
            "ocrad.js/ocrad.js",
            "libs/jquery.min.js",
            "scripts/TourabuEx.js",
            "scripts/util.js",
            "scripts/Functools.js",
            "scripts/sound.js",
            "scripts/events.js",
            "scripts/storage.js",
            "scripts/config.js",
            "scripts/notifier.js",
            "scripts/timer.js",
            "scripts/conquest.js",
            "scripts/duty.js",
            "scripts/capture.js",
            "scripts/repair.js",
            "scripts/Dispatcher.js",
            "scripts/widget.js",
            "scripts/sstp.js",
            "scripts/main.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "images/icon_19.png",
            "38": "images/icon_38.png"
        },
        "default_title": "とうらぶえくすてんしょん",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.dmm.com/netgame/social/-/gadgets/=/app_id=825012/"
            ],
            "js": [
                "libs/jquery.min.js",
                "scripts/tourabu_content.js",
                "scripts/resize_widget.js"
            ]
        },
        {
            "matches": [
                "*://osapi.dmm.com/gadgets/ifr?*aid=825012*"
            ],
            "js": [
                "libs/jquery.min.js",
                "scripts/game_frame_content.js"
            ],
            "all_frames": true
        }
    ],
    "author": "ayachi gin<ayachigin@gmail.com",
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "downloads",
        "webRequest",
        "<all_urls>"
    ]
}
